<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/green_light" android:startColor="@color/green_light" />
            <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" android:topLeftRadius="15dp" android:topRightRadius="15dp" />
        </shape>
    </item>
    <!-- focus -->
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/green_light" android:startColor="@color/green_light" />
            <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" android:topLeftRadius="15dp" android:topRightRadius="15dp" />
        </shape>
    </item>
    <!-- default -->
    <item >
    	<shape>
    	     <stroke android:width="1dp" android:color="#D8D8D8" /> 
            <gradient android:angle="0" android:endColor="@color/color_button_background" android:startColor="@color/color_button_background" />
            <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" android:topLeftRadius="15dp" android:topRightRadius="15dp" />
        </shape>
        
    </item>

</selector>