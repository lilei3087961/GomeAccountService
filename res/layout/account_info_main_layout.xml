<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_activity_info_main"
    android:orientation="vertical"
    android:background="@color/color_activity_backgound"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountInfoActivity" >
    <!-- 标题布局 -->
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/title_height" 
	    android:layout_marginBottom="0dp"
	    android:layout_marginTop="0dp"
	    >
    	<ImageView
    	   android:id="@+id/head_left_arrow"
    	   android:layout_marginRight="@dimen/title_arrow_margin_to_right"
    	   
    	   android:layout_marginLeft="@dimen/title_padding_left"
    	   android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignParentLeft="true"
	       android:layout_centerVertical="true"
	       
	       android:src="@drawable/gome_sys_icon_back"
	       android:contentDescription="@string/imageview_exit_contentdescription"
	       android:onClick="doOnclickAccountInfoMainBackButton" 
    	/>
        <TextView
           android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       
	       android:layout_toRightOf="@+id/head_left_arrow"
	       
	       android:layout_centerVertical="true"
	       android:textSize="@dimen/text_title_size"
	       android:textColor="@color/color_title_text"
	       
	       android:text="@string/ui_activity_title_account"
            />

    </RelativeLayout>
    <!--          <View 
           android:layout_width="match_parent"
	       android:layout_height="@dimen/title_bottom_line_height"
	       android:background="@color/color_title_bg_bottom_line"
	       android:layout_alignParentBottom="true"
            />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@drawable/gome_background_quxian"
        android:orientation="vertical"
        android:paddingLeft="@dimen/page_left_margin"
        android:paddingRight="@dimen/page_right_margin"
        >

        <com.gome.gomeaccountservice.CircleImageView
            android:id="@+id/image_avatar"
            android:layout_width="@dimen/avatar_image_width"
            android:layout_height="@dimen/avatar_image_height"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/imageview_avatar_contentdescription"
            android:src="@drawable/gome_sys_icon_head_zhong"/>

        <TextView
            android:id="@+id/text_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="1dp"
            android:textColor="@color/color_text_90"
            android:textSize="@dimen/text_info_size"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            />

        <TextView
            android:id="@+id/text_gome_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_text_45"
            android:textSize="@dimen/text_size_11sp"
            android:visibility="gone"
            />

</LinearLayout>

    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:paddingTop="0dip"
		android:paddingBottom="0dip">
       
      <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	       <LinearLayout
			    android:layout_marginBottom="0dp"
			    android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
			    >
	            <RelativeLayout
				    android:layout_width="match_parent"
					android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@drawable/layout_background_selector"
                    android:paddingLeft="@dimen/page_left_margin"
					android:paddingRight="@dimen/list_arrow_margin_right"
					android:orientation="horizontal"
					android:onClick="doOnclickPersonalInfoButton"
			    >
			   		<TextView
			           android:layout_width="wrap_content"
				       android:layout_height="wrap_content"
					   android:layout_alignParentLeft="true"
					   android:layout_centerVertical="true"
				       android:text="@string/txt_personal_info"
				       
					   android:textSize="@dimen/list_left_text_size"
					   android:textColor="@color/list_left_text_color"
	           		 />
			   		<TextView
			           android:layout_width="160dp"
				       android:layout_height="wrap_content"
					   android:layout_toLeftOf="@+id/image_arrow_personal_info"
					   android:layout_centerVertical="true"
                       android:gravity="right"
				       android:text="@string/txt_personal_info2"
					   android:textSize="@dimen/list_right_text_size"
					   android:textColor="@color/list_right_text_color"
	           		 />
			   		<!--  android:layout_toLeftOf="@id/image_arrow_personal_info" -->
			   		 <ImageView
			   		   android:id="@+id/image_arrow_personal_info"
			   		   
			   		   android:layout_marginLeft="@dimen/list_arrow_margin_left"
			    	   android:layout_width="@dimen/list_arrow_width"
				       android:layout_height="@dimen/list_arrow_height"
					   android:layout_alignParentRight="true"
					   android:layout_centerVertical="true"
				       android:src="@drawable/gome_sys_icon_right"
				       android:contentDescription="@drawable/gome_sys_icon_right" 
			    	/>
			    </RelativeLayout>
			    <!-- 分割线  绑定手机-->
			    <View  
					android:layout_width="match_parent"  
					android:layout_marginLeft="@dimen/page_left_margin"
					android:layout_height="@dimen/btn_gome_shape_border_width"
					android:background="@color/list_arrow"
				/>
			    <RelativeLayout
				    android:layout_width="match_parent"
					android:layout_height="@dimen/list_item_height"
					android:paddingLeft="@dimen/page_left_margin"
					android:paddingRight="@dimen/list_arrow_margin_right"
					android:orientation="horizontal"
					android:background="@drawable/layout_background_selector"
					android:onClick="doOnclickBindPhoneButton"
			    >
			   		<TextView
			           android:layout_width="wrap_content"
				       android:layout_height="wrap_content"
				       android:layout_marginBottom="15dp"
					   android:layout_alignParentLeft="true"
					   android:layout_centerVertical="true"
				       android:text="@string/ui_activity_title_bind_phone"
					   android:textSize="@dimen/list_left_text_size"
					   android:textColor="@color/list_left_text_color"
	           		 />
			   		<TextView
			   		   android:id="@+id/text_bind_phone"
			           android:layout_width="wrap_content"
				       android:layout_height="wrap_content"
				       android:layout_marginBottom="15dp"
					   android:layout_toLeftOf="@+id/image_arrow_bind_phone"
					   android:layout_centerVertical="true"
					   android:textSize="@dimen/list_right_text_size"
					   android:textColor="@color/list_right_text_color"
	           		 /><!--    android:text="123456789"    -->	
			   		 <ImageView
			   		   android:id="@+id/image_arrow_bind_phone"
			    	   android:layout_width="@dimen/list_arrow_width"
				       android:layout_height="@dimen/list_arrow_height"
					   android:layout_alignParentRight="true"
					   android:layout_centerVertical="true"
				       android:src="@drawable/gome_sys_icon_right"
				       android:contentDescription="@drawable/gome_sys_icon_right" 
			    	/>
			    </RelativeLayout>
			    <!-- 分割线  绑定邮箱-->
			    <View  
					android:layout_width="match_parent"  
					android:layout_marginLeft="@dimen/page_left_margin"
					android:layout_height="@dimen/btn_gome_shape_border_width"
					android:background="@color/list_arrow"
				/>
			    <RelativeLayout
				    android:layout_width="match_parent"
				    android:background="@drawable/layout_background_selector"
					android:layout_height="@dimen/list_item_height"
					android:paddingLeft="@dimen/page_left_margin"
					android:paddingRight="@dimen/list_arrow_margin_right"
					android:orientation="horizontal"
					android:onClick="doOnclickBindMailButton"
			    >
			   		<TextView
			           android:layout_width="wrap_content"
				       android:layout_height="wrap_content"
				       android:layout_marginBottom="15dp"
					   android:layout_alignParentLeft="true"
					   android:layout_centerVertical="true"
				       android:text="@string/ui_activity_title_bind_mailbox"
					   android:textSize="@dimen/list_left_text_size"
					   android:textColor="@color/list_left_text_color"
	           		 />
			   		<TextView
			   		   android:id="@+id/text_bind_email"
			           android:layout_width="wrap_content"
				       android:layout_height="wrap_content"
                       android:maxLines="1"
                       android:maxEms="9"
                       android:ellipsize="end"
                       android:gravity="right"
				       android:layout_marginBottom="15dp"
					   android:layout_toLeftOf="@+id/image_arrow_bind_email"
					   android:layout_centerVertical="true"
					   android:textSize="@dimen/list_right_text_size"
					   android:textColor="@color/list_right_text_color"
	           		 /><!--     android:text="gomeaccount@qq.com" -->
			   		 <ImageView
			   		   android:id="@+id/image_arrow_bind_email"
			    	   android:layout_width="@dimen/list_arrow_width"
				       android:layout_height="@dimen/list_arrow_height"
					   android:layout_alignParentRight="true"
					   android:layout_centerVertical="true"
				       android:src="@drawable/gome_sys_icon_right"
				       android:contentDescription="@drawable/gome_sys_icon_right" 
			    	/>
			    </RelativeLayout>
			    <!-- 分割线  密码安全-->
			    <View  
					android:layout_width="match_parent"  
					android:layout_marginLeft="@dimen/page_left_margin"
					android:layout_height="@dimen/btn_gome_shape_border_width"
					android:background="@color/list_arrow"
				/>
			    <RelativeLayout
				    android:layout_width="match_parent"
				    android:background="@drawable/layout_background_selector"
					android:layout_height="@dimen/list_item_height"
					android:paddingLeft="@dimen/page_left_margin"
					android:paddingRight="@dimen/list_arrow_margin_right"
					android:orientation="horizontal"
					android:onClick="doOnclickPasswordSecurityButton"
			    >
			   		<TextView
			           android:layout_width="wrap_content"
				       android:layout_height="wrap_content"
				       android:layout_marginBottom="15dp"
					   android:layout_alignParentLeft="true"
					   android:layout_centerVertical="true"
				       android:text="@string/txt_password_security"
					   android:textSize="@dimen/list_left_text_size"
					   android:textColor="@color/list_left_text_color"
	           		 />
			   		 <ImageView
			   		   android:id="@+id/image_arrow_password_security"
			    	   android:layout_width="@dimen/list_arrow_width"
				       android:layout_height="@dimen/list_arrow_height"
					   android:layout_alignParentRight="true"
					   android:layout_centerVertical="true"
				       android:src="@drawable/gome_sys_icon_right"
				       android:contentDescription="@drawable/gome_sys_icon_right"  
			    	/>
			    </RelativeLayout>
				<!-- 分割线  -->
			    <View  
					android:layout_width="match_parent"  
					android:layout_marginLeft="@dimen/page_left_margin"
					android:layout_height="@dimen/btn_gome_shape_border_width"
					android:background="@color/list_arrow"
				/>
			    <RelativeLayout
				    android:layout_width="match_parent"
				    android:background="@drawable/layout_background_selector"
					android:layout_height="@dimen/list_item_height"
					android:paddingLeft="@dimen/page_left_margin"
					android:paddingRight="@dimen/list_arrow_margin_right"
					android:orientation="horizontal"
					android:onClick="doOnclickCloudServiceItem"
			    	>
			   		<TextView
			           android:layout_width="wrap_content"
				       android:layout_height="wrap_content"
				       android:layout_marginBottom="15dp"
					   android:layout_alignParentLeft="true"
					   android:layout_centerVertical="true"
				       android:text="@string/txt_cloud_service"
					   android:textSize="@dimen/list_left_text_size"
					   android:textColor="@color/list_left_text_color"
	           		 />

			   		<ImageView
			   		   android:id="@+id/image_arrow_cloud_service"
			   		   android:layout_marginLeft="@dimen/list_arrow_margin_left"
			    	   android:layout_width="@dimen/list_arrow_width"
				       android:layout_height="@dimen/list_arrow_height"
					   android:layout_alignParentRight="true"
					   android:layout_centerVertical="true"
				       android:src="@drawable/gome_sys_icon_right"
				       android:contentDescription="@drawable/gome_sys_icon_right" 
			    	/>
			    </RelativeLayout>
				<!-- 分割线  -->
			    <View  
					android:layout_width="match_parent"  
					android:layout_marginLeft="@dimen/page_left_margin"
					android:layout_height="@dimen/btn_gome_shape_border_width"
					android:background="@color/list_arrow"
				/>
	       </LinearLayout>
       </ScrollView>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:paddingBottom="@dimen/page_bottom_margin"
           >
	       <Button
               android:id="@+id/btn_login_out"
	           style="@com.gome:style/Widget.GOME.Light.Caution.Button"
	           android:layout_width="match_parent"
	           android:layout_marginLeft="@dimen/page_left_margin"
	           android:layout_marginRight="@dimen/page_left_margin"
	           android:layout_height="@dimen/button_default_height"
	           android:paddingLeft="@dimen/button_padding_left"
	           android:paddingRight="@dimen/button_padding_right"
	           android:text="@string/txt_login_out_account"
	           android:textSize="@dimen/btn_gome_text_size"
	           android:layout_gravity="center_horizontal"
	           android:layout_alignParentBottom="true"
	           android:onClick="doOnclickLoginOutButton" />
       </RelativeLayout>
 	</LinearLayout>      
</LinearLayout>