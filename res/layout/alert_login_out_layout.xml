<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alert_login_out_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_more_login_mode_layout"
    android:orientation="vertical"
    tools:context=".AccountInfoActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_more_login_mode_layout"

        android:orientation="vertical"
		android:paddingBottom="@dimen/dialog_padding_bottom"
		android:paddingTop="@dimen/dialog_padding_top"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/text_dialog_text_size"
			    android:textColor="@color/color_text_45"
                android:text="@string/txt_login_out_prompt"
                 />
        </LinearLayout>

         <LinearLayout 
            android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
             >
            <Button
                style="@com.gome:style/Widget.GOME.Light.Button"
			    android:layout_width="0dp"
			    android:layout_weight="1"
			    android:layout_height="@dimen/button_default_height"
				android:layout_marginRight="@dimen/dialog_button_margin_right"
                android:paddingLeft="@dimen/button_padding_left"
                android:paddingRight="@dimen/button_padding_right"
                android:text="@string/txt_set_network_cancel"
                android:textSize="@dimen/button_text_size"
                android:onClick="doOnclickLoginOutCancelButton"/>
            <Button
                style="@com.gome:style/Widget.GOME.Light.Button"
			    android:layout_width="0dp"
			    android:layout_weight="1"
			    android:layout_height="@dimen/button_default_height"
                android:paddingLeft="@dimen/button_padding_left"
                android:paddingRight="@dimen/button_padding_right"
                android:text="@string/registerresult_activity_ok"
                android:textSize="@dimen/button_text_size"
                android:onClick="doOnclickLoginOutOkButton"/>            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>